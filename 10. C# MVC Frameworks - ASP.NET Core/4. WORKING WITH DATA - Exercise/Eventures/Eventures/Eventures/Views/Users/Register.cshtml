@{
    ViewData["Title"] = "Register";
}
@model RegisterViewModel

<div class="w-50 mx-auto">
    <h1 class="text-center">Register</h1>
    <hr style="height: 3px; opacity: 100; background: var(--bs-primary); border: var(--bs-primary)" />
    <form method="post" asp-action="Register" asp-controller="Users">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <div class="col text-center mt-2">
                <label class="d-block fw-bold" asp-for="UserName"></label>
                <input class="w-100 p-1" asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="col text-center mt-2">
                <label class="d-block fw-bold" asp-for="Email"></label>
                <input class="w-100 p-1" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="row">
            <div class="col text-center mt-2">
                <label class="d-block fw-bold" asp-for="Password"></label>
                <input class="w-100 p-1" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="col text-center mt-2">
                <label class="d-block fw-bold" asp-for="ConfirmPassword"></label>
                <input class="w-100 p-1" asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>
        <hr style="height: 3px; opacity: 100; background: var(--bs-primary); border: var(--bs-primary)" />
        <div class="row">
            <div class="col text-center mt-2">
                <label class="d-block fw-bold" asp-for="FirstName"></label>
                <input class="w-100 p-1" asp-for="FirstName" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="col text-center mt-2">
                <label class="d-block fw-bold" asp-for="LastName"></label>
                <input class="w-100 p-1" asp-for="LastName" />
                <span asp-validation-for="LastName"></span>
            </div>
        </div>
        <div class="text-center mt-2">
            <label class="d-block fw-bold" asp-for="UCN"></label>
            <input class="w-100 p-1" asp-for="UCN" />
            <span asp-validation-for="UCN"></span>
        </div>
        <hr style="height: 3px; opacity: 100; background: var(--bs-primary); border: var(--bs-primary)" />
        <div class="text-center">
            <input class="btn text-dark" style="background: var(--bs-primary)" type="submit" value="Register" />
        </div>
    </form>
</div>