@using CHUSHKA.DbModels.Enums;
@{
    ViewData["Title"] = "Create Product";
}
@model CreateProductViewModel

<h1 class="text-center">Create Product</h1>
<hr class="hr-2 bg-dark"/>
<form class="mx-auto half-width" method="post" asp-action="Create" asp-controller="Products">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <h4 class="text-center">Product Type</h4>
    <hr class="hr-2 bg-dark half-width mt-4"/>
    <div class="product-type-holder mt-4 d-flex justify-content-around">
        @foreach (var item in Enum.GetValues(typeof(ProductType)))
        {
            <div class="form-check form-check-inline">
                <input type="radio" asp-for="Type" class="form-check-input" value="@((int)item)">
                <label asp-for="Type" class="form-check-label">@item</label>
            </div>
        }
    </div>
    <hr class="hr-2 bg-dark half-width mt-4"/>
    <div class="button-holder mt-2 d-flex justify-content-center">
        <button type="submit" class="btn chushka-bg-color">Create</button>
    </div>
</form>