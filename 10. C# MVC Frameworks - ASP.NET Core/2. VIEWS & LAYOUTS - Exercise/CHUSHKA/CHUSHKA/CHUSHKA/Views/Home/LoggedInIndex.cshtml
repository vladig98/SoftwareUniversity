@{
    ViewData["Title"] = "Home";
}
@model LoggedInViewModel

<div class="container-fluid text-center">
    <h2>Greetings, @Model.Username!</h2>
    <h4>Feel free to view and order any of our products.</h4>
</div>
<hr class="hr-2 bg-dark"/>
<div class="container-fluid product-holder">
    @for (int i = 0; i < Model.Products.Count; i += 5)
    {
        <div class="row d-flex justify-content-around">
            @for (int j = i; j < i + 5; j++)
            {
                @if (j < Model.Products.Count)
                {
                    <a asp-action="Details" asp-controller="Products" asp-route-id="@Model.Products.ElementAt(j).Id" class="col-md-2">
                        <div class="product p-1 chushka-bg-color rounded-top rounded-bottom">
                            <h5 class="text-center mt-3">@Model.Products.ElementAt(j).Name</h5>
                            <hr class="hr-1 bg-white"/>
                            <p class="text-white text-center">
                                @(Model.Products.ElementAt(j).Description.Length > 50 ? Model.Products.ElementAt(j).Description.Substring(0, 50) + "..." : Model.Products.ElementAt(j).Description)
                            </p>
                            <hr class="hr-1 bg-white"/>
                            <h6 class="text-center text-white mb-3">$@Model.Products.ElementAt(j).Price</h6>
                        </div>
                    </a>
                }
            }
        </div>
    }
</div>