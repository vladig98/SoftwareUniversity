@using CHUSHKA.DbModels;
@using System.Globalization;
@{
    ViewData["Title"] = "All Orders";
}
@model List<Order>

<h1 class="text-center">All Orders</h1>
<hr class="hr-2 bg-dark"/>
<table class="table w-75 mx-auto table-hover">
    <thead>
    <tr class="row">
        <th class="col-md-1">#</th>
        <th class="col-md-4">Order ID</th>
        <th class="col-md-2">Customer</th>
        <th class="col-md-2">Product</th>
        <th class="col-md-2">Ordered On</th>
    </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr class="row">
                <th class="col-md-1">@(i + 1)</th>
                <td class="col-md-4">@Model.ElementAt(i).Id</td>
                <td class="col-md-2">@Model.ElementAt(i).Client.FullName</td>
                <td class="col-md-2">@Model.ElementAt(i).Product.Name</td>
                <td class="col-md-2">@Model.ElementAt(i).OrderedOn.ToString("HH:mm dd/MM/yyyy", CultureInfo.InvariantCulture)</td>
            </tr>
        }
    </tbody>
</table>
