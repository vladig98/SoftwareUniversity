@{
     ViewData["Title"] = "Create Event";
}
@model EventViewModel

<div class="w-50 mx-auto">
    <h1 class="text-center">Create Event</h1>
    <hr style="height: 3px; opacity: 100; background: var(--bs-primary); border: var(--bs-primary)" />
    <form method="post" asp-action="Create" asp-controller="Events">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <div class="col text-center mt-2">
                <label class="d-block fw-bold" asp-for="Name"></label>
                <input class="w-100 p-1" asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="col text-center mt-2">
                <label class="d-block fw-bold" asp-for="Place"></label>
                <input class="w-100 p-1" asp-for="Place" />
                <span asp-validation-for="Place"></span>
            </div>
        </div>
        <hr style="height: 3px; opacity: 100; background: var(--bs-primary); border: var(--bs-primary)" />
        <div class="row">
            <div class="col text-center mt-2">
                <label class="d-block fw-bold" asp-for="Start"></label>
                <input class="w-100 p-1" asp-for="Start" />
                <span asp-validation-for="Start"></span>
            </div>
            <div class="col text-center mt-2">
                <label class="d-block fw-bold" asp-for="End"></label>
                <input class="w-100 p-1" asp-for="End" />
                <span asp-validation-for="End"></span>
            </div>
        </div>
        <hr style="height: 3px; opacity: 100; background: var(--bs-primary); border: var(--bs-primary)" />
        <div class="row">
            <div class="col text-center mt-2">
                <label class="d-block fw-bold" asp-for="TotalTickets"></label>
                <input class="w-100 p-1" asp-for="TotalTickets" />
                <span asp-validation-for="TotalTickets"></span>
            </div>
            <div class="col text-center mt-2">
                <label class="d-block fw-bold" asp-for="PricePerTicket"></label>
                <input class="w-100 p-1" asp-for="PricePerTicket" />
                <span asp-validation-for="PricePerTicket"></span>
            </div>
        </div>
        <hr style="height: 3px; opacity: 100; background: var(--bs-primary); border: var(--bs-primary)" />
        <div class="text-center">
            <input class="btn text-dark" style="background: var(--bs-primary)" type="submit" value="Create Event" />
        </div>
    </form>
</div>