@{
    ViewData["Title"] = "Add Cat";
}

<div class="mx-auto w-50">
    <h1 class="text-center">Add Cat</h1>
    <form method="post" action="/Cats/Add" >
        <div class="mb-3">
            <span class="form-label">Cat Name</span>
            <input name="Name" class="form-control" placeholder="Cat Name" />
        </div>
        <div class="mb-3">
            <span class="form-label">Cat Age</span>
            <input name="Age" class="form-control" min="1" max="99" step="1" placeholder="Cat Age" />
        </div>
        <div class="mb-3">
            <span class="form-label">Cat Breed</span>
            <input name="Breed" class="form-control" placeholder="Cat Breed" />
        </div>
        <div class="mb-3">
            <span class="form-label">Cat Image URL</span>
            <input name="ImageURL" class="form-control" placeholder="Cat Image URL" />
        </div>
        <div class="mb-3">
            <input class="btn btn-primary w-100" type="submit" value="Add Cat" />
        </div>
    </form>
</div>
